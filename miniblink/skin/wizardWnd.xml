<?xml version="1.0" encoding="UTF-8"?>
<Window size="800,600" mininfo="600,400" caption="0,0,0,32" sizebox="8,8,8,8"> <!-- 窗口的初始尺寸(宽800，高600)、窗口的最小尺寸(宽600，高400)、标题栏拖拽区域(高32)、可拖拽边框大小(这里添加sizebox后就可以拖拽边框调整大小了) -->
	<!-- <Font name="幼圆" size="20" default="true" /> -->
	<Font shared="true" id="1" name="微软雅黑" size="24" bold="true" italic="true" />

    <VerticalLayout bkcolor="#FFF0F0F0" bkcolor2="#FFAAAAA0"> <!-- 整个窗口的背景色 -->
        <!-- 标题栏区 -->
        <HorizontalLayout height="32" bkcolor="#FFE6E6DC" bkcolor2="#FFAAAAA0"> <!-- 标题栏背景色 bkcolor、bkcolor2、bkcolor3分别是渐变色的三个值-->         
            <HorizontalLayout> <!-- 占空位，占据左边所有的空位-->
            	<Label name="HeaderText" text="DuiLib MiniBrowser" width="200" />
            	<!-- <VerticalLayout /> -->
            </HorizontalLayout>
            <VerticalLayout width="77"> <!-- 右边三个控件所占的宽度-->
                <Button name="minbtn"   tooltip="最小化" float="true" pos="0,5,22,24"  width="23"/>
                <Button name="maxbtn"   tooltip="最大化" float="true" pos="22,5,44,24" width="23"/>
                <Button name="restorebtn" visible="false" tooltip="还原" float="true" pos="22,5,44,24" width="23"/>
                <Button name="closebtn" tooltip="关闭"   float="true" pos="44,5,74,24" width="28"/>
            </VerticalLayout>      
        </HorizontalLayout>
        
        <!-- 客户区 -->
